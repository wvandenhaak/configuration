{
    "name": "icecake/app-configurator",
    "description": "A package which allows to create configuration variables for use in your application",
    "type": "project",
    "authors": [
        {
            "name": "Wesley van den Haak",
            "email": "w.vandenhaak@live.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/yaml": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "IceCake\\AppConfigurator\\": "src/",
            "IceCake\\AppConfigurator\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --coverage-html coverage/ --whitelist src/ tests"
    }
}
