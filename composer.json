{
    "name": "wvandenhaak/configuration",
    "description": "A package which allows to create configuration variables for use in your application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Wesley van den Haak",
            "email": "w.vandenhaak@live.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/yaml": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Wvandenhaak\\Configuration\\": "src/",
            "Wvandenhaak\\Configuration\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage/"
    }
}
